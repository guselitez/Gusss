        let cart = [];
        let customersReviews = [];
        // Fungsi untuk menampilkan detail produk (Modal)
        function showProductDetail(productId) {
            const product = products.find(p => p.id === productId);
            if (product) {
                document.getElementById('productDetailTitle').innerText = product.name;
                document.getElementById('productDetailInfo').innerText = product.detail;
                document.getElementById('productDetailBenefit').innerText = product.benefit;
                document.getElementById('productDetailModal').style.display = 'block';
            }
        }
        // Fungsi untuk menutup modal detail produk
        function closeProductDetailModal() {
            document.getElementById('productDetailModal').style.display = 'none';
        }
        // Fungsi untuk menambah produk ke keranjang
        function addToCart(product) {
            const existingItem = cart.find(item => item.id === product.id);
            if (existingItem) {
                existingItem.quantity++;
            } else {
                cart.push({ ...product, quantity: 1 });
            }
            updateCartDisplay();
            alert(`${product.name} telah ditambahkan ke keranjang!`);
            // Setelah menambahkan ke keranjang, scroll kembali ke Home
            document.getElementById('home').scrollIntoView({ behavior: 'smooth' });
            // Munculkan bagian ulasan pelanggan jika belum terlihat
            document.getElementById('customer-reviews-section').style.display = 'block';
            populateReviewProductSelect();
        }
        // Fungsi untuk memperbarui tampilan keranjang
        function updateCartDisplay() {
            const cartItemsContainer = document.getElementById('cart-items');
            const cartTotalElement = document.getElementById('cart-total');
            const cartQuantityTotalElement = document.getElementById('cart-quantity-total');
            const cartCountElement = document.getElementById('cart-count');
            const cartEmptyMessage = document.getElementById('cart-empty-message');
            let total = 0;
            let totalQuantity = 0;
            cartItemsContainer.innerHTML = ''; // Kosongkan dulu
            if (cart.length === 0) {
                cartEmptyMessage.style.display = 'block';
            } else {
                cartEmptyMessage.style.display = 'none';
                cart.forEach(item => {
                    const listItem = document.createElement('li');
                    const itemTotal = item.price * item.quantity;
                    listItem.innerHTML = `${item.name} x ${item.quantity} <span>Rp ${itemTotal.toLocaleString('id-ID')}</span>`;
                    cartItemsContainer.appendChild(listItem);
                    total += itemTotal;
                    totalQuantity += item.quantity;
                });
            }
            cartTotalElement.innerText = `Total Harga: Rp ${total.toLocaleString('id-ID')}`;
            cartQuantityTotalElement.innerText = `Jumlah Barang: ${totalQuantity}`;
            cartCountElement.innerText = totalQuantity; // Update angka di nav bar
        }
        // Fungsi simulasi checkout (bisa dikembangkan ke halaman pembayaran)
        function checkout() {
            if (cart.length === 0) {
                alert('Keranjang Anda masih kosong. Silakan tambahkan produk terlebih dahulu.');
                return;
            }
            alert('Terima kasih telah berbelanja di Kitty Seller Shop! Pesanan Anda sedang diproses.');
            // Kosongkan keranjang setelah checkout
            cart = [];
            updateCartDisplay();
            // Scroll ke bagian ulasan pelanggan setelah checkout
            document.getElementById('customer-reviews-section').scrollIntoView({ behavior: 'smooth' });
        }
        // Fungsi untuk mengisi opsi produk di form ulasan
        function populateReviewProductSelect() {
            const selectElement = document.getElementById('review-product');
            selectElement.innerHTML = '<option value="">Pilih Produk</option>'; // Reset
            products.forEach(product => {
                const option = document.createElement('option');
                option.value = product.id;
                option.innerText = product.name;
                selectElement.appendChild(option);
            });
        }
        // Fungsi untuk menambahkan ulasan pelanggan
        document.getElementById('review-form').addEventListener('submit', function(event) {
            event.preventDefault(); // Mencegah form reload halaman
            const reviewerName = document.getElementById('reviewer-name').value;
            const reviewProductId = document.getElementById('review-product').value;
            const rating = document.getElementById('rating').value;
            const reviewText = document.getElementById('review-text').value;
            const reviewedProduct = products.find(p => p.id === reviewProductId);
            if (!reviewedProduct) {
                alert('Silakan pilih produk yang valid.');
                return;
            }
            const newReview = {
                name: reviewerName,
                product: reviewedProduct.name,
                rating: parseInt(rating),
                review: reviewText,
                date: new Date().toLocaleDateString('id-ID')
            };
            customersReviews.push(newReview);
            displayCustomerReviews();
            alert('Terima kasih atas ulasan Anda!');
            this.reset(); // Reset form
        });
        // Fungsi untuk menampilkan ulasan pelanggan
        function displayCustomerReviews() {
            const reviewsContainer = document.getElementById('customer-reviews');
            reviewsContainer.innerHTML = ''; // Kosongkan dulu
            if (customersReviews.length === 0) {
                reviewsContainer.innerHTML = '<p style="text-align: center; color: #888;">Belum ada ulasan. Jadilah yang pertama!</p>';
                return;
            }
            customersReviews.forEach(review => {
                const reviewDiv = document.createElement('div');
                reviewDiv.classList.add('customer-review');
                reviewDiv.innerHTML = `
                    <div class="reviewer-name">${review.name} - ${review.product}</div>
                    <div class="stars">${'⭐'.repeat(review.rating)}</div>
                    <p>"${review.review}"</p>
                    <small>Tanggal: ${review.date}</small>
                `;
                reviewsContainer.appendChild(reviewDiv);
            });
        }
        // Fungsi untuk menampilkan testimoni produk
        function displayTestimonials() {
            const testimonialList = document.getElementById('testimonial-list');
            testimonialList.innerHTML = '';
            products.forEach(product => {
                if (product.testimonial) {
                    const p = document.createElement('p');
                    p.innerHTML = `<strong>${product.name}:</strong> "${product.testimonial}"`;
                    testimonialList.appendChild(p);
                }
            });
        }
        // Initial calls when page loads
        document.addEventListener('DOMContentLoaded', () => {
            updateCartDisplay();
            displayTestimonials();
            populateReviewProductSelect(); // Isi select produk ulasan saat halaman dimuat
            displayCustomerReviews(); // Tampilkan ulasan yang mungkin sudah ada (simulasi)
            // Mengimplementasikan animasi scroll halus untuk navigasi
            document.querySelectorAll('nav a').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });
        });
    </script>

<div id="login-page" style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100vh; background-color: #EAF4FF;">
    <h2 style="color: #007BFF;">Selamat Datang di Kitty Seller Shop</h2>
    <p>Masukkan nama dan email Anda untuk masuk</p>
    <input type="text" id="login-name" placeholder="Nama" style="padding: 10px; margin: 5px; width: 300px;">
    <input type="email" id="login-email" placeholder="Email" style="padding: 10px; margin: 5px; width: 300px;">
    <button onclick="login()" style="padding: 10px 20px; margin: 10px; background-color: #007BFF; color: white; border: none; border-radius: 5px;">Masuk</button>
    <button onclick="skipLogin()" style="padding: 10px 20px; background-color: #6c757d; color: white; border: none; border-radius: 5px;">Masuk Gratis</button>
</div>
<script>
function login() {
    const name = document.getElementById('login-name').value;
    const email = document.getElementById('login-email').value;
    if(name && email) {
        localStorage.setItem('userName', name);
        document.getElementById('login-page').style.display = 'none';
        document.body.classList.remove('login-only');
    } else {
        alert("Mohon masukkan nama dan email.");
    }
}
function skipLogin() {
    document.getElementById('login-page').style.display = 'none';
    document.body.classList.remove('login-only');
}
document.addEventListener('DOMContentLoaded', function() {
    document.body.classList.add('login-only');
});
</script>
<style>
body.login-only > *:not(#login-page) {
    display: none !important;
}
</style>

</body>
</html>